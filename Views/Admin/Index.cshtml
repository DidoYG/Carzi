@model List<Carzi.Models.User>

<h2>Admin Panel</h2>

<ul class="nav nav-tabs mb-3">
    <li class="nav-item">
        <a class="nav-link @(ViewBag.ActiveTab == "Users" ? "active" : "")"
           asp-action="Index" asp-route-tab="Users">
            Users
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link @(ViewBag.ActiveTab == "Fuels" ? "active" : "")"
           asp-action="Index" asp-route-tab="Fuels">
            Fuels
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link @(ViewBag.ActiveTab == "Vignettes" ? "active" : "")"
           asp-action="Index" asp-route-tab="Vignettes">
            Vignettes
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link @(ViewBag.ActiveTab == "Annual Inspections" ? "active" : "")"
           asp-action="Index" asp-route-tab="Annual Inspections">
            Annual Inspections
        </a>
    </li>
</ul>

<div>
    @if (ViewBag.ActiveTab == "Users")
    {
        @await Html.PartialAsync("_UsersTab", Model)
    }
    else if (ViewBag.ActiveTab == "Fuels")
    {
        <p>Fuel management coming soon</p>
    }
    else if (ViewBag.ActiveTab == "Vignettes")
    {
        <p>Vignette management coming soon</p>
    }
    else if (ViewBag.ActiveTab == "Annual Inspections")
    {
        <p>Annual Inspection management coming soon</p>
    }
</div>
