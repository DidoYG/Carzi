@model List<Carzi.Models.User>

<h3>Manage Users</h3>

<a asp-action="Create" class="btn btn-success mb-3">
    + Create New User
</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Created</th>
            <th style="width:180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Username</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td>@user.CreatedAt.ToShortDateString()</td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.Id"
                   class="btn btn-sm btn-primary">Edit</a>

                <a asp-action="ResetPassword" asp-route-id="@user.Id"
                   class="btn btn-sm btn-warning">Password</a>

                @if (User.Identity?.Name != user.Username)
                {
                    <form asp-action="Delete" asp-route-id="@user.Id"
                          method="post" class="d-inline">
                        <button class="btn btn-sm btn-danger"
                                onclick="return confirm('Delete this user?')">
                            Delete
                        </button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
