@model Carzi.Models.VignetteType

@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h3>Edit Vignette</h3>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Type</label>
        <input name="name" value="@Model.Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Validity (days)</label>
        <input name="validityDays" value="@Model.ValidityDays" type="number" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Price (â‚¬)</label>
        <input name="price" value="@Model.Price" type="number" step="0.01" class="form-control" required />
    </div>

    <br>
    <button class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
